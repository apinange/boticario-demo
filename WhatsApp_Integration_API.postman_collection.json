		{
			"name": "Webhook",
			"item": [
				{
					"name": "Get Webhook Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/webhook?instanceName=default",
							"host": ["{{base_url}}"],
							"path": ["api", "webhook"],
							"query": [
								{
									"key": "instanceName",
									"value": "default"
								}
							]
						},
						"description": "Check if webhook is configured (webhook is auto-configured on startup and instance creation)"
					}
				},
				{
					"name": "Webhook (Evolution API)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"event\": \"MESSAGES_UPSERT\",\n  \"instance\": \"default\",\n  \"data\": []\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhook",
							"host": ["{{base_url}}"],
							"path": ["webhook"]
						},
						"description": "Endpoint que recebe webhooks da Evolution API. Normalmente chamado automaticamente pela Evolution API."
					}
				}
			]
		},
