		{
			"name": "Instance Management",
			"item": [
				{
					"name": "Get All Instances",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/instances",
							"host": ["{{base_url}}"],
							"path": ["api", "instances"]
						}
					}
				},
				{
					"name": "Create Instance",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"instanceName\": \"default\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/instances",
							"host": ["{{base_url}}"],
							"path": ["api", "instances"]
						}
					}
				},
				{
					"name": "Get QR Code",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/instances/qr?instanceName=default&format=json",
							"host": ["{{base_url}}"],
							"path": ["api", "instances", "qr"],
							"query": [
								{
									"key": "instanceName",
									"value": "default"
								},
								{
									"key": "format",
									"value": "json",
									"description": "Response format: 'json' for JSON with base64, 'image' or 'png' for PNG image"
								}
							]
						}
					}
				},
				{
					"name": "Get QR Code (Image)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/instances/qr/image?instanceName=default",
							"host": ["{{base_url}}"],
							"path": ["api", "instances", "qr", "image"],
							"query": [
								{
									"key": "instanceName",
									"value": "default",
									"description": "Name of the instance (optional, uses default if not provided)"
								}
							]
						},
						"description": "Returns QR code as PNG image directly. Postman will automatically display the image in the Preview tab."
					}
				},
				{
					"name": "Reconnect Instance",
					"request": {
